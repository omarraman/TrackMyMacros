<div class="container">

    <div class="row py-1 px-3" T style="background-color:@(IsChecked ? "grey" : "transparent")">
        <div class="col-1">
            <input type="checkbox" @bind="IsChecked"/>
        </div>
        <div class="col-2 small-font">
            <RadzenLabel Text="@Set.Target"></RadzenLabel>
        </div>
        <div class="col-4">
            <RadzenNumeric TValue="double" @bind-Value="Set.Weight">Weight</RadzenNumeric>
        </div>
        <div class="col-4">
            <RadzenNumeric TValue="int" @bind-Value="@Set.Reps">Reps</RadzenNumeric>
        </div>
        <div class="col-1">
            <RadzenButton Click="@OnSave" Icon="save" ButtonStyle="ButtonStyle.Primary"/>
        </div>
    </div>
</div>