@using System.Diagnostics
@using TrackMyMacros.Dtos
@* <RadzenCard> *@
<div class="container">
    @foreach (var foodAmount in @Meal.FoodAmounts)
    {
        <MealFoodItemComponent SelectedFoodId="@foodAmount.FoodId" OnQuantitiesChanged="@OnQuantitiesChanged" OnRemove="RemoveFoodItem" FoodAmount="@foodAmount"></MealFoodItemComponent>
    }
    <div class="row py-1">
        <div class="col-2">
            <RadzenButton Click="@OnAddFood" Icon="add" ButtonStyle="ButtonStyle.Primary"/>
        </div>
        <div class="col-2">
            <RadzenButton icon = "trending_flat" ButtonStyle="ButtonStyle.Secondary" Click=@ShowInlineDialog/>
        </div>
        <div class="col-2">
            <RadzenButton Click="ShowCopyMealsDialog" Icon="content_copy" ButtonStyle="ButtonStyle.Primary"/>
        </div>
        <div class="col-2">
            <RadzenButton Click="CreateFoodCombo" Text="NFC" ButtonStyle="ButtonStyle.Primary"/>
        </div>
        <div class="col-2">
            <RadzenButton Click="AddFoodCombo" Text="AFC" ButtonStyle="ButtonStyle.Primary"/>
        </div>
        <div class="col-2">
            <RadzenButton Click="@OnSave" Icon="save" ButtonStyle="ButtonStyle.Primary"/>
        </div>
    </div>

    <h4>Totals</h4>
    <div class="row py-1">
        <div class="col-3" style="background-color: greenyellow">
            @Double.Round(@Meal.Protein, 2)
            <text>/</text>
            @AllowedProtein.Value
        </div>
        <div class="col-3" style="background-color: #0dcaf0">
            @Double.Round(@Meal.Carbohydrate, 2)
            <text>/</text>
            @AllowedCarbohydrate.Value
        </div>
        <div class="col-3" style="background-color: yellow">
            @Double.Round(@Meal.Fat, 2)
            <text>/</text>
            @AllowedFat.Value
        </div>d
        <div class="col-3" style="background-color: #babbbc">
            @Double.Round(@Meal.Calories, 2)

        </div>
    </div>


</div>