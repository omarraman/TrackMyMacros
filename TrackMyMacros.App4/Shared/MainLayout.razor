@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-0">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent Context="ex">
                    <p>An unhandled error has occurred</p>
                    <p>@ex.Message</p>
                    <p>@ex.StackTrace</p>
                </ErrorContent>
            </ErrorBoundary>
            

   
            <RadzenDialog/>
        </article>
    </main>
</div>