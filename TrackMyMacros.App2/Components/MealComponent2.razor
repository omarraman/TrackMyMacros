@using System.Diagnostics
<RadzenCard>
    @foreach (var foodAmount in @Meal.FoodAmounts)
    {
        <MealFoodItemComponent SelectedFoodId="@foodAmount.FoodId" OnQuantitiesChanged="@OnQuantitiesChanged" OnRemove="RemoveFoodItem" FoodAmount="@foodAmount"></MealFoodItemComponent>
    }
    <RadzenButton Click="@OnAddFood" Text="Add Food" ButtonStyle="ButtonStyle.Primary"/>

    Total Protein: @Double.Round(@Meal.Protein, 2)
    <text>/</text>
    @AllowedProtein.Value
    Carbs: @Double.Round(Meal.Carbohydrate, 2)
    <text>/</text>
    @AllowedCarbohydrate.Value
    Fat: @Double.Round(Meal.Fat, 2)
    <text>/</text>
    @AllowedFat.Value
    Calories: @Double.Round(Meal.Calories, 2)
</RadzenCard>