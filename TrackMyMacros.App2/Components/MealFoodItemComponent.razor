@using System.Xml
@if (Food.HasValue)
{
    <RadzenCard>
        <div>
            <RadzenDropDown @bind-Value=@FoodId Data=@FoodList TextProperty="Name" ValueProperty="Id" Placeholder="Select Food" Style="width: 100%; max-width: 400px;"/>
            @Food.Value.Name :<RadzenNumeric @bind-Value=@Quantity/> g
            <span>
                <strong>P</strong>@(Food.Value.ProteinAmount * @Quantity / 100)
            </span>
            <span>
                <strong>F</strong>@(Food.Value.FatAmount * Quantity / 100)
            </span>
            <span>
                <strong>C</strong>@(Food.Value.CarbohydrateAmount * @Quantity / 100)
            </span>
            <RadzenButton Click="@RemoveFood" Text="Remove" ButtonStyle="ButtonStyle.Primary"/>
        </div>

    </RadzenCard>
}
else
{
    <div>
        N/A
    </div>
}